# --- Project Config ---
PROJECT_NAME=QueryMind
API_V1_STR=/api/v1
SECRET_KEY=generate_a_long_random_string_here

# --- CORS (Crucial for Deployment) ---
# Format: JSON array of strings
# Example: ["https://querymind.vercel.app"]
CORS_ORIGINS=["http://localhost:3000"]

# --- Database (Neon/Postgres) ---
# Must use the 'postgresql+asyncpg://' scheme
DATABASE_URL=your_postgres_async_url_here

# --- Google AI (Gemini) ---
GOOGLE_API_KEY=your_gemini_api_key_here

# --- Pinecone (Vector DB) ---
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=querymind-schema

# --- Security (Encryption) ---
# Key for encrypting user connection strings.
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_fernet_encryption_key_here

# --- Clerk Auth (Backend Verification) ---
# Found in Clerk Dashboard -> API Keys -> Advanced -> JWT Templates (optional) or standard Issuer
CLERK_ISSUER=https://your-clerk-issuer-url-here
CLERK_JWKS_URL=https://your-clerk-url/.well-known/jwks.json
